<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

	<!-- Put site-specific property overrides in this file. -->

<configuration>
	<property>
		<name>crawler.cycle.millistime</name>
		<value>100000</value>
	</property>
	<property>
		<name>crawler.plugin.whitelist</name>
		<value>phimclub</value>
	</property>
	<property>
		<name>crawler.plugin.blacklist</name>
		<value></value>
	</property>	
	<property>
		<name>news.pubdate.using.crawltime</name>
		<value>true</value>
	</property>
	<property>
		<name>term.frequence.min</name>
		<value>10</value>
	</property>
	<property>
		<name>news.similar.threshold</name>
		<value>0.9</value>
	</property>	
	<property>
		<name>news.relate.threshold</name>
		<value>0.5</value>
	</property>
	<property>
		<name>news.bool.similar.threshold</name>
		<value>0.3</value>
	</property>
	<property>
		<name>news.compare.num</name>
		<value>80000</value>
	</property>	
	<property>
		<name>news.max.store.num</name>
		<value>100000</value>
	</property>	
	<property>
		<name>crawler.debug.mode</name>
		<value>false</value>
	</property>
	<property>
		<name>news.ignore.html.style.script</name>
		<value>true</value>
	</property>
	<property>
		<name>news.ignore.html.style.script.whitelist</name>
		<value>*</value>
	</property>
	<property>
		<name>news.ignore.html.style.script.blacklist</name>
		<value>iframe,object,param,embed</value>
	</property>
	<property>
		<name>news.img.style</name>
		<value>class="storyInlinePhoto"</value>
	</property>
	<property>
		<name>news.link.prefix</name>
		<value>http://</value>
	</property>
	<property>
		<name>news.auto.thumbnail</name>
		<value>true</value>
	</property>
	<property>
		<name>news.download.image</name>
		<value>false</value>
	</property>
	<property>
		<name>news.download.image.savepath</name>
		<value>data/images</value>
	</property>
	<property>
		<name>news.download.image.linkOnSite</name>
		<value>/media/images/article</value>
	</property>
	<property>
		<name>news.relate.train</name>
		<value>true</value>
	</property>
	<property>
		<name>entity.relate.fields</name>
		<value>title,summary,content</value>
	</property>
	<property>
		<name>entity.relate.insert.sql</name>
		<value>INSERT INTO `related_articles`(`article_id`, `related_article_id`, `related_score`) VALUES (?, ?,?)</value>
	</property>
	<property>
		<name>persistencer.backend</name>
		<value>dyna</value>
	</property>
</configuration> 