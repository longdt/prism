<?xml version="1.0" encoding="UTF-8"?>
<entityConf xsi:noNamespaceSchemaLocation="../../entityconf.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" backend="com.ant.crawler.core.ListSiteCrawler">

	<entityFields>
		<rssSite>
		</rssSite>
		<listSite>
			<itemXpath>//*[@id='list-view-2']/div[@id='haivl-list-content']/article</itemXpath>
			<field xpath="header/h2/a/@href" name="tempSource">
				<filter type="scriptone">
					<![CDATA[
						var URL = Java.type("java.net.URL");
						var url = new URL(entity.getSourceUrl(), field);
						entity.setDetailUrl(url);
						
						var Date = Java.type("java.util.Date");
						entity.set("create_date", new Date());
						entity.set("owner_id", "1");
						entity.set("type", 0);
						entity.set("view", 10);
						entity.set("like_count", 0);
					]]>
				</filter>
			</field>
			<field xpath="header/h2/a/text()" name="title">
				<filter type="scriptone">
					<![CDATA[ field = field.trim(); ]]>
				</filter>
			</field>
		</listSite>
		<detailSite>
			<field xpath="//img[@class='badge-item-img']/@ng-src" name="content">
				<filter type="scriptone">
					<![CDATA[
						field = field.trim();
						if (field.startsWith("//")) {
							field = "http:" + field;
						}
					]]>
				</filter>
			</field>
		</detailSite>
	</entityFields>
	<categories mappingField="category_id">
		<category id="1">
			http://haiivl.com/
		</category>
	</categories>
</entityConf>